<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3AA8A5"
    android:id="@+id/about_screen">
    <ImageView
        android:id="@+id/calibration_background"
        android:layout_width="match_parent"
        android:layout_height="1080dp"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:contentDescription="@string/todo" android:src="@drawable/calibration_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="641dp"
        android:layout_height="340dp" android:text="@string/about_descr" android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>