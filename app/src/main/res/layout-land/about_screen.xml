<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3AA8A5"
    android:orientation="horizontal"
    android:id="@+id/about_screen" tools:ignore="MissingDefaultResource">
    <ImageView
        android:id="@+id/calibration_background"
        android:layout_width="match_parent"
        android:layout_height="1080dp"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:contentDescription="@string/todo" android:src="@drawable/calibration_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="641dp"
        android:layout_height="340dp" android:text="@string/about_descr" android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cloud"
        android:layout_width="259dp" android:layout_height="137dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.966"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.7"
        app:layout_constraintVertical_bias="0.941" app:srcCompat="@drawable/cloud"/>
    <TextView
        android:id="@+id/return_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/return_to_homescreen" android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cloud"
        app:layout_constraintEnd_toEndOf="@+id/cloud" app:layout_constraintStart_toStartOf="@+id/cloud"
        app:layout_constraintTop_toTopOf="@+id/cloud" app:layout_constraintVertical_bias="0.478"/>

</androidx.constraintlayout.widget.ConstraintLayout>