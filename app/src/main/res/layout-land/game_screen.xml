<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_screen"
    tools:ignore="MissingDefaultResource">


    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/background"/>

    <ImageView
        android:id="@+id/snow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/snow"/>
    <ImageView
        android:id="@+id/resumeBubble"
        android:layout_width="150dp" android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="231dp"
        android:alpha="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1" app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/endBubble" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" app:srcCompat="@drawable/bubble_unselected"/>
    <ImageView
        android:id="@+id/endBubble"
        android:layout_width="150dp" android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" android:layout_marginStart="151dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="146dp"
        android:alpha="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintHorizontal_bias="0.951" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resumeBubble"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/bubble_unselected"/>
    <TextView
        android:id="@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/endBubble"
        android:layout_alignTop="@+id/endBubble"
        android:layout_alignEnd="@+id/endBubble"
        android:layout_alignBottom="@+id/endBubble"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="22dp" android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:alpha="0.0"
        android:lineSpacingExtra="8sp" android:text="Resume" android:textAlignment="center"
        android:textColor="#FDFDFD" android:textSize="24sp" android:textStyle="bold"
        android:typeface="normal"/>
    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/resumeBubble"
        android:layout_alignTop="@+id/resumeBubble"
        android:layout_alignEnd="@+id/endBubble"
        android:layout_alignBottom="@+id/resumeBubble"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="-270dp" android:layout_marginBottom="18dp"
        android:fontFamily="sans-serif"
        android:alpha="0.0"
        android:lineSpacingExtra="8sp" android:text="End" android:textAlignment="center"
        android:textColor="#FDFDFD" android:textSize="24sp" android:textStyle="bold"
        android:typeface="normal"/>


</RelativeLayout>