<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3AA8A5"
    android:id="@+id/home_screen"
    tools:context=".screens.HomeScreenActivity" android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/background_without_trees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/snow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/snow"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/background"
        app:layout_constraintRight_toRightOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.088" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/trees_neutral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/trees_neutral"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/background"
        app:layout_constraintRight_toRightOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bubble3"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:alpha="0.7"
        android:tag="bubble3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bubble2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bubble_unselected" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bubble1"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginBottom="80dp"
        android:alpha="0.7"
        android:tag="bubble1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bubble2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:srcCompat="@drawable/bubble_unselected" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bubble2"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:alpha="0.7"
        android:tag="bubble2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bubble_unselected" />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/about" android:textAlignment="center" android:textColor="#FDFDFD"
        android:textSize="24sp" android:textStyle="bold" android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/bubble1"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="@+id/bubble1"
        app:layout_constraintLeft_toLeftOf="@+id/bubble1"
        app:layout_constraintRight_toRightOf="@+id/bubble1"
        app:layout_constraintStart_toStartOf="@+id/bubble1"
        app:layout_constraintTop_toTopOf="@+id/bubble1"
    />
    <TextView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/play"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        android:textStyle="bold" android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/bubble3"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="@+id/bubble3"
        app:layout_constraintHorizontal_bias="0.521" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintStart_toStartOf="@+id/bubble3"
        app:layout_constraintTop_toTopOf="@+id/bubble3" app:layout_constraintVertical_bias="0.465"/>


    <TextView
        android:id="@+id/calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/calibrate"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        android:textStyle="bold" android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/bubble2"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="@+id/bubble2"
        app:layout_constraintHorizontal_bias="0.521" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintStart_toStartOf="@+id/bubble2"
        app:layout_constraintTop_toTopOf="@+id/bubble2" app:layout_constraintVertical_bias="0.465"/>

</androidx.constraintlayout.widget.ConstraintLayout>